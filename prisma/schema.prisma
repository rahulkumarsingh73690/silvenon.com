// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StandalonePost {
  slug         String    @id
  title        String
  htmlTitle    String?
  description  String
  category     String?
  published    DateTime?
  content      String
  lastModified DateTime?
  tweet        String?
}

model SeriesPart {
  slug         String
  title        String
  htmlTitle    String?
  description  String
  category     String?
  content      String
  lastModified DateTime?
  seriesPart   Int
  series       Series    @relation(fields: [seriesSlug], references: [slug])
  seriesSlug   String

  @@id([slug, seriesSlug])
}

model Series {
  slug        String       @id
  title       String
  htmlTitle   String?
  description String
  published   DateTime?
  tweet       String?
  parts       SeriesPart[]
}

model Admin {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String
  name         String
}
