{
  "name": "silvenon.com",
  "description": "My personal website",
  "homepage": "https://silvenon.com",
  "author": {
    "name": "Matija MarohniÄ‡",
    "email": "matija.marohnic@gmail.com",
    "url": "https://silvenon.com"
  },
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvenon/silvenon.com.git"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dotenv": "node node_modules/dotenv-safe/config.js",
    "generate:css": "tailwindcss --input ./tailwind.css --output ./app/tailwind.css",
    "dev": "npm-run-all dotenv --parallel dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "node --require ./mocks ./node_modules/.bin/remix dev",
    "build": "npm-run-all build:css build:remix",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "start:mocks": "node --require ./mocks ./node_modules/.bin/remix-serve build",
    "prelint": "eslint-config-prettier src/root.tsx src/__tests__/posts.test.ts",
    "lint": "eslint . --report-unused-disable-directives --cache --cache-location ./node_modules/.cache/eslint",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev 3000 'cypress open'",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks 8811 'cypress run'",
    "typecheck": "tsc --build",
    "validate": "npm-run-all --parallel 'test -- --run' lint typecheck test:e2e:run"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "pre-push": "npm run validate"
  },
  "nano-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@gitgraph/react": "^1.6.0",
    "@headlessui/react": "0.0.0-insiders.27dece1",
    "@heroicons/react": "^1.0.5",
    "@iconify/icons-entypo-social": "^1.1.0",
    "@remix-run/node": "^1.3.4",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "browserslist": "^4.19.1",
    "cloudinary": "^1.27.1",
    "cloudinary-tiny-js": "^2.0.1",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.27.0",
    "esbuild": "^0.14.10",
    "esbuild-plugin-browserslist": "^0.4.3",
    "feed": "^4.2.2",
    "fuzzaldrin-plus": "^0.6.0",
    "mdx-bundler": "^9.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-twitter-widgets": "^1.10.0",
    "rehype-pretty-code": "^0.2.2",
    "remark-smartypants": "^2.0.0",
    "remark-unwrap-images": "^3.0.1",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
    "shiki": "^0.10.0",
    "tiny-invariant": "^1.2.0",
    "toml": "^3.0.0",
    "unorphan": "^1.2.1",
    "utterances-react-component": "^1.0.0"
  },
  "devDependencies": {
    "@iconify/react": "^3.1.3",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/eslint-config": "^1.3.2",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^14.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/eslint": "^8.4.1",
    "@types/fuzzaldrin-plus": "^0.6.2",
    "@types/hast": "^2.3.4",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.2.0",
    "c8": "^7.11.0",
    "cypress": "^9.5.2",
    "dotenv-safe": "^8.2.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^19.0.0",
    "msw": "^0.39.2",
    "nano-staged": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "simple-git-hooks": "^2.7.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.8.6",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.8.2"
  }
}
