{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true, // TODO: remove this and fix the errors
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
  },
  "exclude": [
    "./cypress"
  ],
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
