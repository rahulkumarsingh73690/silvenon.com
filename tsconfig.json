{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
    },
  },
  "include": [],
  "references": [
    { "path": "./app" },
    { "path": "./cypress" },
    { "path": "./scripts" },
  ],
}
